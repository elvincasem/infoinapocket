<?xml version="1.0" encoding="UTF-8" ?>
    
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.chedro1.www"
        versionCode = "1" 
        version     = "1.3.0" >
        <name>Info in a Pocket</name>
        <description>
            CHED Region 1
        </description>
        <author email="info@chedro1.com" href="http://www.chedro1.com">
            CHED MIS
        </author>
        <content src="index.html" />
        <access origin="*" />
		<allow-navigation href="*" />
        <icon src="icon.png" gap:platform="android" gap:qualifier="ldpi" />
        <icon src="icon.png" gap:platform="android" gap:qualifier="mdpi" />
        <icon src="icon.png" gap:platform="android" gap:qualifier="hdpi" />
        <icon src="icon.png" gap:platform="android" gap:qualifier="xhdpi" />
        <icon src="icon.png" gap:platform="android" gap:qualifier="xxhdpi" />
        <icon src="icon.png" gap:platform="android" gap:qualifier="fr-xxhdpi" />
		<preference name="debuggable" value="false"/>
		<plugin name="cordova-plugin-whitelist" spec="1.3.0" source="npm" />
		<plugin name="cordova-plugin-inappbrowser" spec="1.5.0" source="npm" />
		<plugin name="cordova-plugin-splashscreen" spec="4.0.0" source="npm" />
		
	
<platform name="android">
    <splash src="splash.png" density="land-hdpi"/>
    <splash src="splash.png" density="land-ldpi"/>
    <splash src="splash.png" density="land-mdpi"/>
    <splash src="splash.png" density="land-xhdpi"/>
    <splash src="splash.png" density="port-hdpi"/>
    <splash src="splash.png" density="port-ldpi"/>
    <splash src="splash.png" density="port-mdpi"/>
    <splash src="splash.png" density="port-xhdpi"/>
</platform>
<platform name="ios">
    <splash src="splash.png" width="320" height="480"/>
    <splash src="splash.png" width="640" height="960"/>
    
</platform>
<preference name="AutoHideSplashScreen" value="true" />
<preference name="SplashScreenDelay" value="3000" />
<preference name="SplashMaintainAspectRatio" value="true" />
<preference name="SplashShowOnlyFirstTime" value="true" />
	<preference name="splashscreen" value="splash"/>	
    </widget>

